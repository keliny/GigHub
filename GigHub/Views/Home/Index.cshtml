@model IEnumerable<GigHub.Models.Gig>
@{
    ViewBag.Title = "Home Page";
}

<ul class="gigs">
    @foreach (var gig in Model)
    {
        <li>
            <div class="date">
                <div class="month">@gig.DateTime.ToString("MMM")</div>
                <div class="day">@gig.DateTime.ToString("d ")</div>
            </div>
            <div class="details">
                <span class="artist">@gig.Artist.Name</span>
                <span class="genre">@gig.Genre.Name </span>
                <span data-gig-id="@gig.Id" class="btn btn-light btn-sm float-right js-toggle-attendance">Going?</span>
            </div>

        </li>
    }
</ul>

@section scripts
{
    <script>
        $(document).ready(function() {
            $(".js-toggle-attendance").click(function(e) {
                var button = $(e.target);
                $.post("/api/attendances",
                        {
                            gigId: button.attr("data-gig-id")
                        })
                    .done(function() {
                        button.removeClass("btn-light").addClass("btn-info").text("Going");
                    })
                    .fail(function() {
                        alert("Something went wrong!");
                    });
            });
        });
    </script>
}